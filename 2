#include<bits/stdc++.h>
using namespace std;


int main(void)
{
    int n, l;
    cin >> n >> l;
    long long arr[1002];
    for (int i = 0; i < n; ++i) {
        cin >> arr[i];
    }
    sort(arr, arr+n);
    double e = max(arr[0]-0, l-arr[n-1]);
    for (int i = 0; i < n; ++i) {
       e = max(e, (arr[i+1]-arr[i])*0.5);
    }

    printf("%.9f\n", e);
    return 0;
}
